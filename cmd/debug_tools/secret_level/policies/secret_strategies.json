{
  "version": "2.0.0",
  "description": "工业级敏感文件检测策略",
  "rules": [
    {
      "id": "R001",
      "level": "绝密",
      "keywords": ["绝密", "TOP SECRET"],
      "regex": ["★\\s*绝密", "密级\\s*[:：]\\s*绝密"],
      "scopes": ["metadata", "body"]
    },
    {
      "id": "R002",
      "level": "机密",
      "keywords": ["机密"],
      "regex": ["★\\s*机密"],
      "scopes": ["metadata", "body"]
    },
    {
      "id": "R003",
      "level": "内部",
      "keywords": ["内部公开", "非公开"],
      "regex": ["仅限内部[使用|传阅]"],
      "scopes": ["all"]
    }
  ]
}